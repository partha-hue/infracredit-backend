datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  phone        String?    @unique
  fullName     String
  email        String?    @unique
  address      String?
  businessName String?
  passwordHash String
  profilePic   String?
  latitude     Float?
  longitude    Float?
  isMigrated   Boolean    @default(false)
  resetToken   String?    // Added for OTP verification
  customers    Customer[]
  createdAt    DateTime   @default(now())
}

model Customer {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  ownerId      String        @db.ObjectId
  owner        User          @relation(fields: [ownerId], references: [id])
  name         String
  phone        String?
  totalDue     Float         @default(0.0)
  isDeleted    Boolean       @default(false)
  transactions Transaction[]
  createdAt    DateTime      @default(now())

  @@index([ownerId])
}

enum TransactionType {
  CREDIT
  PAYMENT
}

model Transaction {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String          @db.ObjectId
  customer    Customer        @relation(fields: [customerId], references: [id])
  amount      Float
  type        TransactionType
  description String?
  createdAt   DateTime        @default(now())

  @@index([customerId])
}